{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/Frontend",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/Backend/app.js",
            "envFile": "${workspaceFolder}/Backend/.env"
        }
    ]
}